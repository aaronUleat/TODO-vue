doctype html
html
    <!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang=""><![endif]-->
    <!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang=""><![endif]-->
    <!--[if IE 8]><html class="no-js lt-ie9" lang=""><![endif]-->
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-compatible', content='IE=11')
        meta(http-equiv='X-UA-Compatible', content='IE=EmulateIE9')
        meta(http-equiv='X-UA-Compatible', content='IE=9; IE=8; IE=7')
        meta(http-equiv='X-UA-Compatible', content='IE=EmulateIE8')
        meta(http-equiv='X-UA-Compatible', content='IE=Edge')
        meta(http-equiv='X-UA-Compatible', content='IE=Edge,chrome=1')
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title TODO Vue
        link(rel="stylesheet" href="css/styles.css")
    body
        .container
            h2 TODO app
            .row
                .col-xs-6
                    form.form(@submit.prevent="addTarea(nuevaTarea)")
                        .form-group
                            .input-group
                                input.form-control(type="text" v-model="nuevaTarea")
                                .input-group-btn
                                    button.btn.btn-default(type="submit")
                                        span.glyphicon.glyphicon.glyphicon-plus

                    ul.list-group
                        li.list-group-item.clearfix.tareas(v-for="(tarea, index) in tareas")
                            p.lead {{ tarea.titulo }} - {{ index }}
                            .form-group
                                input.form-control(type="text" v-model="tarea.titulo")
                            div
                                span.pull-right
                                    button.btn.btn-default.btn-xs: span.glyphicon.glyphicon-save
                                    button.btn.btn-default.btn-xs(@click="editandoTarea = index"): span.glyphicon.glyphicon-pencil
                                    button.btn.btn-default.btn-xs: span.glyphicon.glyphicon-ok
                                    button.btn.btn-default.btn-xs: span.glyphicon.glyphicon-repeat
                                    button.btn.btn-default.btn-xs(@click="removeTarea(index)"): span.glyphicon.glyphicon-remove
                    pre {{ $data }}
        script(src="../node_modules/vue/dist/vue.js")
        script(src="js/main.js")


